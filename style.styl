.detail-wrapper
  position fixed
  height 0
  width 100%
  top 0
  left 0
  overflow hidden
  background-color transparent
  transition-property background-color, height
  transition-delay 0s, 1s
  transition-duration 1s, 0s
  transition-timing-function cubic-bezier(0.165, 0.84, 0.44, 1)

  .background-slider
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-color black
    background-repeat no-repeat
    transition-property opacity, background-position, background-size
    transition-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
    transition-duration .5s, 4s, 4s
    opacity 0

    &.hide
      display none
      transition-duration 0

  .detail
    position absolute
    width 0
    height 0
    margin-top 0
    margin-left 0
    border-radius 5000px
    top 50%
    left -10%
    background-color white
    transition all 1s ease .2s

    .back
      height 100px
      width 50px
      font-size 48px
      line-height 100px
      position absolute
      top 50%
      margin-top -50px
      right 1em
      z-index 25
      color black
      text-decoration none

    .nav
      position fixed
      width 30%
      top 2em
      left -30%
      transition left .5s ease-in 0s
      z-index 25
      a
        text-decoration none
        color black

      .prev
        margin-left 2em
        &:before
          content "<"
          margin-right .5em
          font-weight 700
      .next
        float right
        &:after
          content ">"
          margin-left .5em
          font-weight 700
    
    .txt-wrapper
      position fixed
      height 100%
      width 30%
      line-height 100vh
      top 0
      left -30%
      transition left .5s ease-in 0s

      .txt-aligner
        line-height 1.5em
        display inline-block
        padding-left 2em
        vertical-align middle
        p
          text-indent 2em

    .join
      display block
      height 2em
      line-height 2em
      border-radius 2em
      border 2px solid black
      color black
      text-decoration none
      text-align center

  .department-logo
    width 60%
    height 100%
    right -60%
    top 0
    position fixed
    background-repeat no-repeat
    background-position center center
    background-size 400px auto
    transition right .5s cubic-bezier(0.895, 0.03, 0.685, 0.22) 0s

  &:target
    height 100%
    transition-property background-color, height
    transition-delay 0s
    transition-duration 2s, 0s
    .detail
      width 100vw
      height 100vw
      margin-left -50vw
      margin-top -50vw
      transition all 1s
      .txt-wrapper, .nav
        transition left .5s cubic-bezier(0.165, 0.84, 0.44, 1) .5s
        left 0
    .department-logo
      right 0
      transition right .5s cubic-bezier(0.165, 0.84, 0.44, 1) .5s

  &#detail-hr
    &:target
      background-color #ffea00
    .department-logo
