.detail-wrapper
  position fixed
  height 0
  width 100%
  top 0
  left 0
  overflow hidden
  background-color transparent
  transition-property background-color, height
  transition-delay 0, 1s
  transition-duration 1s, 0

  .detail
    position absolute
    width 0
    height 0
    margin-top 0
    margin-left 0
    border-radius 5000px
    top 50%
    left -10%
    background-color white
    transition all 1s
    
    .txt-wrapper
      position fixed
      height 100%
      width 30%
      line-height 100vh
      top 0
      left -30%
      transition left .5s ease-out 0

      .txt-aligner
        line-height 1.5em
        display inline-block
        padding-left 2em
        vertical-align middle

  .department-logo
    width 60%
    height 100%
    right -60%
    top 0
    position fixed
    background-repeat no-repeat
    background-position center center
    background-size 400px auto
    transition right .5s ease-out 0

  &:target
    height 100%
    transition-property background-color, height
    transition-delay 0
    transition-duration 1s, 0
    .detail
      width 100vw
      height 100vw
      margin-left -50vw
      margin-top -50vw
      .txt-wrapper
        transition left .5s ease-out .5s
        left 0
    .department-logo
      right 0
      transition right .5s ease-out .5s

  &#detail-hr
    &:target
      background-color #ffea00
    .department-logo
      background-image url(imgs/hr.png)

