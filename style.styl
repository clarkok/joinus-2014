#joinus
  .line
    display block
    &:after
      content ""
      clear both
      display inline-block
      float left
    .input
      margin-bottom 1em
      display inline-block
      float left
      position relative
      height 2em
      margin-right 2em
      &.input-text
        border-bottom 2px solid black
        label
          cursor text
          position absolute
          top .1em
          left .1em
          color gray
          font-size 1em
          transition all .5s
        &.focus label
          font-size .6em
          top -1.5em
          color black

        input
          display block
          box-sizing border-box
          background-color transparent
          font-size 1em
          padding .2em
          outline 0
          border 0
      &.input-select
        cursor pointer
        height 2em
        &:after
          content ""
          width 0
          height 0
          border-color black transparent transparent transparent
          border-width 5px
          border-style solid
          position absolute
          right 1em
          top 1em
          z-index 5
        .choses
          box-sizing border-box
          border 2px solid black
          width 100%
          list-style none
          display block
          margin 0
          padding 0
          position absolute
          z-index 2
          background-color white
          .option
            display block
            height 0
            line-height 2em
            padding-left .5em
            overflow hidden
            transition all .3s
            &.checked
              height 2em
        &.focus
          z-index 10
          .choses .option
            height 2em
            &:hover
              background-color #eee
      &.input-textarea
        overflow hidden
        height auto
        padding .1em 0
        .prompt
          width 18em
        textarea
          display inline-block
          float left
          width 18em
          font-size 1em
          box-sizing border-box
          border-width 2px
          border-style solid
          border-top-color black
          border-bottom-color black
          border-left-color transparent
          border-right-color transparent
          padding .5em
          min-height 5em
      &.input-file
        .prompt
          width 18em

