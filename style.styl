    color white
    text-decoration none 
    width $item-size
    height $item-size
    border-radius $item-size
    background-color transparent
    border-width 3px
    border-style solid
    border-color white
    position absolute
    z-index 10
    transition all .5s cubic-bezier(0.165, 0.84, 0.44, 1)
    cursor pointer
