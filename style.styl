html, body
  background-color #e7e7e7
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden
  position relative
  font-family "Microsoft YaHei UI", "Microsoft YaHei", "Hiragino Sans GB", " WenQuanYi Micro Hei"

#background
  width 100%
  height 100%
  opacity 1
  transition opacity .5s

$joinus-scale = 0.8

body.joinus
  #background
    opacity 0
  #wrapper
    left 30%

  .item
    opacity 1
    transition-delay 0!important

    &#hr
      top - $item-circle-radius * $joinus-scale
      left 0

    &#photo
      top - $item-circle-radius * 0.707 * $joinus-scale
      left $item-circle-radius * 0.707 * $joinus-scale

    &#news
      top 0
      left $item-circle-radius * $joinus-scale

    &#video
      top $item-circle-radius * 0.707 * $joinus-scale
      left $item-circle-radius * 0.707 * $joinus-scale

    &#outreach
      top $item-circle-radius * $joinus-scale
      left 0

    &#tide
      top $item-circle-radius * 0.707 * $joinus-scale
      left - $item-circle-radius * 0.707 * $joinus-scale

    &#tech
      top 0
      left - $item-circle-radius * $joinus-scale

    &#pm
      top - $item-circle-radius * 0.707 * $joinus-scale
      left - $item-circle-radius * 0.707 * $joinus-scale

.logo
  outline 0
  display block
  height $logo-size
  left 50%
  margin-left -($logo-size / 2)
  margin-top -($logo-size / 2)
  position absolute
  top 50%
  width $logo-size
  text-decoration none

  .logo-img
    background-image url(imgs/logo.png)
    background-position center
    background-repeat no-repeat
    background-size $logo-size $logo-size
    height $logo-size
    width $logo-size

  .logo-txt
    text-align center
    font-size 24px
    margin-top -24px
    letter-spacing -.5em
    text-indent -.5em
    transition all 1s
    opacity 0
    color black
    text-decoration none
  &:hover
    .logo-txt
      text-indent 1em
      letter-spacing 1em
      opacity 1

  &.dark
    .logo-img
      background-image url(imgs/logo-white.png)
    .logo-txt
      color white

#wrapper
  width 0
  height 0
  position absolute
  top 50%
  left 50%
  transition all .5s
  perspective 1000px

.item
  width $item-size
  height $item-size
  border-radius ($item-size / 2)
  position absolute
  margin-top -($item-size / 2)
  margin-left -($item-size / 2)
  transition all 2s cubic-bezier(0.165, 0.84, 0.44, 1)
  transition-property top, left, opacity
  opacity 0

  .front
    display block
    color black
    text-decoration none 
    width $item-size
    height $item-size
    border-radius ($item-size / 2)
    background-color white
    position absolute
    z-index 10
    transition all .5s cubic-bezier(0.165, 0.84, 0.44, 1)
    cursor pointer
    .title
      width 100%
      span.line
        display block
        text-align center
        font-size 16px
        line-height 16px
        height 16px
      &.one-line
        padding-top 42px
      &.two-line
        padding-top 34px
    .intro
      display none
  &#hr
    top - $item-circle-radius * 3
    left 0

  &#photo
    top - $item-circle-radius * 0.707 * 3
    left $item-circle-radius * 0.707 * 3

  &#news
    top 0
    left $item-circle-radius * 3

  &#video
